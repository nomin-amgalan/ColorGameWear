<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF1818">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000">

        <ImageView
            android:id="@+id/square1"
            android:layout_width="107dp"
            android:layout_height="107dp"
            android:background="#000000"
            android:padding="1dp"
            android:src="@android:drawable/screen_background_light"
            android:tint="@color/semitransparent_grey"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/square2"
            android:layout_width="106dp"
            android:layout_height="108dp"
            android:background="#000000"
            android:src="@android:drawable/screen_background_light"
            android:tint="@color/semitransparent_grey"
            app:layout_constraintBottom_toTopOf="@+id/square4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/square1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/square3"
            android:layout_width="118dp"
            android:layout_height="114dp"
            android:background="#000000"
            android:padding="1dp"
            android:src="@android:drawable/screen_background_light"
            android:tint="@color/semitransparent_grey"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/square1"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/square4"
            android:layout_width="107dp"
            android:layout_height="107dp"
            android:background="#000000"
            android:outlineProvider="none"
            android:padding="1dp"
            android:src="@android:drawable/screen_background_light"
            android:tint="@color/semitransparent_grey"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/score"
            android:layout_width="38dp"
            android:layout_height="37dp"
            android:background="#000000"
            android:text="0"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>